<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" data-bs-theme="dark">
<head>
<!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> -->
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
<style>
html {
  font-family: system-ui;
  background-color: #0d1b2a;
  color: #aaa;
}
body {
  margin: 0;
}
pre, code {
  font-family: ui-monospace;
}
code {
  font-size: 0.9em;
}
table pre {
  margin: 0;
}
html {
  margin: 0;
}
th {
  text-align: left;
}
th, td {
  padding: 5px 15px;
}
.tbl {
  border-spacing: 5px;
  border-radius: 2px;
}
.instr {
  background-color: #1b263b;
  margin: 5px;
  padding: 10px 10px;
  border-radius: 2px;
}
.asm {
  white-space: pre-wrap;
  background-color: #0d1b2a;
  padding: 15px;
  border-radius: 2px;
}
table, th, td {
  border: 1px solid #2d384a;
  border-collapse: collapse;
}
tr:nth-child(even) {
    background-color: #0d1b2abb;
}
h2 {
  margin-top: 5px;
  margin-bottom: 20px;
}
aside h2 {
  margin-top: 5px;
  margin-bottom: 4px;
}
h3 {
  margin-bottom: 20px;
  margin-top: 20px;
}
h3, h2 {
  color: #5a789a;
}
.instr-body {
  border-radius: 6px;
}
.field {
  color: #4dac8d;
}
.constant {
  color: #777;
}
a {
  color: inherit;
  text-decoration: underline;
  text-decoration-color: #5a789a;
}

aside {
  width: 200px;
  height: 100vh;
  background: #0d1b2a;
  position: fixed;
  right: 0;

  color: #ccc;

  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-top: -4px;

  box-shadow: 3px 1px 5px 0px rgba(0, 0, 0, 0.75)
}
.aside-inner {
  overflow-y: scroll;
  width: 145px;
}

aside ul {
  padding-inline-start: 0;
  margin-top: 5px;
}

aside ul li {
  list-style: none;
  font-size: 18px;
  padding: 10px 0;
  cursor: pointer;
}

aside ul li .fas {
  width: 50px;
}

.aside-wrapper {
  padding: 0 40px;
  box-sizing: border-box;
}

.logo-text {
  font-size: 24px;
  position: relative;
}

.sidebar-toggle {
  position: absolute;
  top: 5px;
  right: 155px;
  background: #0d1b2a;
  padding: 4px 11px;
  text-align: center;
  border-radius: 8px;
  cursor: pointer;
}

input {
  display: none;
}
input:checked ~ aside {
  right: -200px;
}
</style>
</head>

<body>

<input type="checkbox" id="toggler" checked />
<aside class="aside-wrapper">
   <h2 class="logo-text"><span>Instructions</span>
    <label for="toggler">
      <i class="fas fa-bars sidebar-toggle"></i>
    </label>
  </h2>
  <div class="aside-inner">
  <ul>
  {%for i in instrs %}
    <li><a href="#{{i.name}}">{{i.name}}</a></li>
  {% endfor %}
  </ul>
  </div>
</aside>

{% for i in instrs %}
<div class="instr">
  <div class="instr-body">
    <a href="#{{i.name}}"><h2 class="" id="{{i.name}}">{{i.name}}</h2></a>

    <p>
    {{i.doc}}
    </p>

    <h3>Assembly</h3>
    <pre class="asm">{{i.assembly}}</pre>

    <h3>Examples</h3>
    {% for e in i.examples %}
      <p>{{e.doc}}</p>
      <pre class="asm">{{e.code}}</pre>
    {% endfor %}

    <h3>Fields</h3>
    <table class="tbl">
    <tr><th>Name</th><th>Width</th><th>Description</th></tr>
    {% for f in i.fields %}
      <tr><td><pre><span class="field">{{f.name}}</span></pre></td><td>{{f.width}}</td><td>{{f.doc}}</td></tr>
    {% endfor %}
    </table>

    <h3>Layout</h3>
    <table class="machine tbl">
    <tr><th>Index</th><th>Width</th><th>Value</th></tr>
    {% for m in i.machine %}
      <tr><td>{{m[0]}}</td><td>{{m[1]}}</td><td><pre>{{m[2]}}</pre></td></tr>
    {% endfor %}
    </table>
    
  </div>
</div>
{% endfor %}

</body>

</html>
