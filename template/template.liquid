<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" data-bs-theme="dark">
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<style>
table pre {
  margin: 0;
}
html {
  padding: 10px;
}
th, td {
  margin: 15px;
}
.fields {
  border-spacing: 5px;
  border-collapse: unset;
}
.machine {
  border-spacing: 5px;
  border-collapse: unset;
}
</style>
</head>

<body>

{% for i in instrs %}
<div class="card">
  <div class="card-body">
    <h2 class="card-title">{{i.name}}</h2>

    <p>
    {{i.doc}}
    </p>

    <h3>Assembly</h3>
    <pre>
      {{i.assembly}}
    </pre>

    <h3>Fields</h3>
    <table class="fields">
    <tr><th>Name</th><th>Width</th><th>Description</th></tr>
    {% for f in i.fields %}
      <tr><td><b><pre>{{f.name}}</pre></b></td><td>{{f.width}}</td><td>{{f.doc}}</td></tr>
    {% endfor %}
    </table>

    <h3>Layout</h3>
    <table class="machine">
    <tr><th>Index</th><th>Width</th><th>Value</th></tr>
    {% for m in i.machine %}
      <tr><td>{{m[0]}}</td><td>{{m[1]}}</td><td>{{m[2]}}</td></tr>
    {% endfor %}
    </table>
    
  </div>
</div>
{% endfor %}

</body>

</html>
